<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="24dp" android:background="#F5F5F5">

        <EditText android:id="@+id/businessName" android:hint="Business Name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/businessType" android:hint="Business Type" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/ownerName" android:hint="Owner Name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/gstin" android:hint="GSTIN" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/mobile" android:hint="Mobile No" android:inputType="phone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/email" android:hint="Email" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/address" android:hint="Business Address" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/pin" android:hint="Set PIN" android:inputType="numberPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/registerBtn" android:text="Register" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
